@using QLKS_3TL.Areas.QuanLy.Models.ModelPhong
@model IEnumerable<ModalThongTinPhong>
@{
    ViewData["Title"] = "Quản lý phòng";
}
<div class="main" id="content">
    <nav class="navbar navbar-expand px-4 py-3">
        <div class="navbar-collapse collapse">
            <ul class="navbar-nav justify-content-between" style="width: 1380px;">
                <li>
                    <h2 style="font-weight: bolder;">Thông tin phòng</h2>
                </li>
                @await Html.PartialAsync("~/Areas/Admin/Views/DoiMatKhau/Index.cshtml")
            </ul>
        </div>
    </nav>
    <main class="content px-3 py-3">
        <div class="container-fluid">
            <div>
                <div class="row justify-content-between mx-1 mb-4">
                    <div class="input-group d-flex align-items-center border border-dark rounded"
                         style="width: 300px;padding: 0;">
                        <i class="fa-solid fa-magnifying-glass fa-1x ms-2 "></i>
                        <input type="text" id="timkiemphong" class="form-control input-border" placeholder="Thông tin phòng"
                               aria-label="Username" aria-describedby="basic-addon1" style="border: 0;">
                    </div>
                    <button type="button" id="btnOpenModal" class="btn btn-success" style="width: 150px; font-size: small;">
                        Thêm phòng
                    </button>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <table class="table">
                            <thead style="background: #0e2238;">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Mã hạng phòng</th>
                                    <th scope="col">Tên hạng phòng</th>
                                    <th scope="col">Mã phòng</th>
                                    <th scope="col">Giá</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody id="tblBodyPhong">
                                @{
                                    int stt = 1;
                                }
                                @foreach( var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@stt</th>
                                        <td>@item.MaHangPhong</td>
                                        <td>@item.TenHangPhong</td>
                                        <td style="padding-left: 30px;">@item.MaPhong</td>
                                        <td>@item.GiaHangPhong VND</td>
                                        <td class="d-flex  justify-content-end">
                                            <button type="button" class="btn btn-danger delete-button" data-id="@item.MaPhong"  style="font-size: small;">Xóa</button>
                                        </td>
                                    </tr>
                                    stt = stt + 1;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
<div id="ThemModal"></div>
<!-- Modal chi tiết -->
<div class="modal fade" id="chitiet" tabindex="-1" aria-labelledby="chitiet" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="border-radius: 20px;">
            <div class="modal-header d-flex justify-content-center">
                <div>
                    <h5 style="font-weight: bolder;">Thông tin hạng phòng</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-5">
                            <img src="images/room-1.jpg" alt="" style="width: 300px;">
                        </div>
                        <div class="col-7 px-0">
                            <div class="container">
                                <div class="row">
                                    <h4 style="font-weight: 600;">Dexu King</h4>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <h6> <span style="font-weight: 600;">Mã phòng: </span>DK01</h6>
                                    </div>
                                    <div class="col-6">
                                        <h6><span style="font-weight: 600;">Số giường:</span> 2</h6>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <h6><span style="font-weight: 600;">Diện tích:</span> 35m2</h6>
                                    </div>
                                    <div class="col-6">
                                        <h6><span style="font-weight: 600;">Giá: </span> 1.200.000 VND</h6>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <h6><span style="font-weight: 600;">Mô tả: </span> có view nhìn ra cửa sổ, không
                                        gian thoáng mát, đầy đủ tiện nghi, có nhiều đồ dùng cá nhân cần thiết, nhân
                                        viên phục vụ nhiệt tình.</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

