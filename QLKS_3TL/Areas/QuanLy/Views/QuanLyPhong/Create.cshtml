@{
}
@model ModalThongTinPhong // hoặc model phù hợp của bạn, nếu cần

<div class="modal fade" id="ModalThem" tabindex="-1" aria-labelledby="themLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="border-radius: 20px;">
            <div class="modal-header d-flex justify-content-center">
                <h5 class="modal-title" id="themLabel" style="font-weight: bolder;">Thêm phòng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <!-- Chọn hạng phòng -->
                        <div class="col-6">
                            <label class="mb-1 ms-1 label-modal">Hạng Phòng</label>
                            <select id="HangPhong" class="form-select" aria-label="Chọn hạng phòng">
                                <option selected value="">Chọn hạng phòng</option>
                                <!-- Option hạng phòng sẽ được cập nhật qua Ajax -->
                            </select>
                            <span id="errorHangPhong" class="text-danger"></span> <!-- Thông báo lỗi -->
                        </div>

                        <!-- Nhập tên phòng -->
                        <div class="col-6">
                            <label for="tenPhong" class="ms-1 mb-1 label-modal">Tên phòng</label>
                            <input type="text" id="tenPhong" class="form-control" placeholder="Nhập tên phòng" aria-label="Tên phòng">
                            <span id="errorTenPhong" class="text-danger"></span> <!-- Thông báo lỗi -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <div class="container my-2">
                <div class="row" style="justify-content: flex-end;">
                    <div class="col-3 m-2 d-flex justify-content-end">
                        <button type="button" id="btnThemphong" class="btn btn-success" style="font-size: small;" onclick="ThemPhong()">Thêm phòng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


