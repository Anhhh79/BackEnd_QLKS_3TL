@using QLKS_3TL.Areas.Admin.Models

@model LoginViewModel

@{
    ViewData["Title"] = "Đăng Nhập";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Form</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.0/mdb.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-image: url('https://booking.muongthanh.com/images/login-banner.png');
            background-size: cover;
            background-position: center;
            height: 100vh;
        }

        .form-container {
            border-radius: 1.5rem; /* Bo tròn toàn bộ form */
            padding: 3rem; /* Tăng padding để form không bị sát cạnh */
            background-color: rgba(255, 255, 255, 0.95); /* Màu nền với độ mờ */
        }

        .btn-warning {
            border-radius: 0.75rem; /* Bo tròn góc nút đăng nhập */
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-warning:hover {
                background-color: #f0daaf; /* Màu nền khi hover */
                color: white;
            }

        .form-control {
            height: 55px; /* Tăng chiều cao cho ô input */
            border-radius: 0.75rem; /* Bo tròn toàn bộ góc của ô input */
        }

        .input-group-text {
            background-color: #e9edf0;
        }

        .form-container {
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1); /* Hiệu ứng đổ bóng */
        }
    </style>
</head>
<body>
    <!-- Login Form -->
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="bg-white form-container shadow-sm">
                <form asp-action="Login" method="post">
                    <h1 class="text-center form-heading text-black fw-bold mb-4">Đăng nhập</h1>

                    <!-- Display Error Messages -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="mb-4">
                        <div class="input-group">
                            <span class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                    <path d="M2 13s-1 0-1-1 1-4 7-4 7 3 7 4-1 1-1 1H2zm14 1a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2h16z" />
                                </svg>
                            </span>
                            <input type="text" class="form-control" id="TaiKhoan" name="TaiKhoan" placeholder="Tài khoản" required>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="input-group">
                            <span class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16">
                                    <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z" />
                                    <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                </svg>
                            </span>
                            <input type="password" class="form-control" id="MatKhau" name="MatKhau" placeholder="Mật khẩu" required>
                        </div>
                    </div>
                    <div class="forgot-password text-end mb-4 ">
                        <a href="#" class="text-dark fs-6 text-decoration-none hover-underline">Quên mật khẩu?</a>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-warning btn-lg fw-bold text-uppercase" type="submit">ĐĂNG NHẬP</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
