<div class="modal fade" id="roomModal" tabindex="-1" aria-labelledby="roomModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" id="roomModalDialog">
        <div class="modal-content" style="border-radius: 20px" id="roomModalContent">
            <div class="modal-header d-flex justify-content-center">
                <div>
                    <h5 style="font-weight: bolder;">Thông tin phòng</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-12 px-0">
                            <div class="container">
                                <div class="row mt-2">
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Họ tên:</span></h6>
                                        <input type="text" class="form-control" id="TenTrong" placeholder="Họ và tên">
                                        <span class="error text-danger" id="NameError"></span>
                                    </div>
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Số điện thoại:</span></h6>
                                        <input type="text" class="form-control" id="SdtTrong" placeholder="Số điện thoại">
                                        <span class="error text-danger" id="PhoneError"></span>
                                    </div>
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Giới tính:</span></h6>
                                        <select class="form-select" id="GioiTingTrong" required="">
                                            <option value="">Chọn giới tính</option>
                                            <option value="Nam">Nam</option>
                                            <option value="Nữ">Nữ</option>
                                            <option value="Khác">Khác</option>
                                        </select>
                                        <span class="error text-danger" id="GenderError"></span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">CCCD:</span></h6>
                                        <input type="text" class="form-control" id="CccdTRong" placeholder="Căn cước công dân">
                                        <span class="error text-danger" id="CccdError"></span>
                                    </div>
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Ngày nhận:</span></h6>
                                        <div class="input-group date">
                                            <input type="text" class="form-control datepicker" id="NgayNhanTrong" placeholder="Ngày nhận">
                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        </div>
                                        <span class="error text-danger" id="CheckInDateError"></span>
                                    </div>
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Ngày trả:</span></h6>
                                        <div class="input-group date">
                                            <input type="text" class="form-control datepicker" id="NgayTraTrong" placeholder="Ngày trả">
                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        </div>
                                        <span class="error text-danger" id="CheckOutDateError"></span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Email:</span></h6>
                                        <input type="email" class="form-control" id="EmailTrong" placeholder="Email">
                                        <span class="error text-danger" id="EmailError"></span>
                                    </div>
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Tổng số ngày:</span></h6>
                                        <input type="text" class="form-control" id="NgayTrong" value="0" readonly>
                                    </div>
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Hạng phòng:</span></h6>
                                        <select class="form-select" aria-label="Default select example" id="HPTrong">
                                            <option selected="" value="">Chọn hạng phòng</option>
                                            <option value="0">Dexu King</option>
                                            <option value="1">Dexu King 1</option>
                                            <option value="2">Dexu King 2</option>
                                        </select>
                                        <span class="error text-danger" id="RoomClassError"></span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Tên phòng:</span></h6>
                                        <select class="form-select" aria-label="Default select example" id="TPTrong">
                                            <option selected="" value="">Chọn tên phòng</option>
                                            <option value="0">Dexu King</option>
                                            <option value="1">Dexu King 1</option>
                                            <option value="2">Dexu King 2</option>
                                        </select>
                                        <span class="error text-danger" id="RoomNameError"></span>
                                    </div>
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Yêu cầu:</span></h6>
                                        <input type="text" class="form-control" id="YeuCauTrong" placeholder="Yêu cầu thêm (nếu có)">
                                        <span class="error text-danger" id="RequestError"></span>
                                    </div>
                                    <div class="col-4">
                                        <h6><span style="font-weight: 600;">Thanh toán:</span></h6>
                                        <input type="text" class="form-control" id="TtTrong" value="0 VND" readonly>
                                        <span class="error text-danger" id="PaymentError"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="NhanPhongTrong">Nhận phòng</button>
                <button type="button" class="btn btn-warning" id="DatPhongTrong">Đặt phòng</button>
            </div>
        </div>
    </div>
</div>